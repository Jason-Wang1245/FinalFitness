<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <title>Appointments</title>
    <link rel="stylesheet" href="css/appointments.css" />
  </head>
  <body>
    <div id="hiddenData" style="display: none">
      <span id="username" data-value="<%= username %>"></span>
    </div>
    <%- include('partials/header') %>
    <div class="content-box">
      <% if (accountType === "Trainer"){ %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Your Posted Appointments</h2>
            <div class="d-grid gap-2" style="margin-bottom: 1rem">
              <button id="search-member-button" class="btn btn-primary rounded-pill" type="button" data-bs-toggle="modal" data-bs-target="#createAppointment">Create Appointment</button>
            </div>
            <div class="accordion" id="availableAppointments">
              <% for (let i = 0; i < myAvailableAppointments.length; i++) { %>
              <div class="accordion-item">
                <h2 class="accordion-header">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=myAvailableAppointments[i].appointmentid%>" aria-expanded="true" aria-controls="collapse<%=myAvailableAppointments[i].appointmentid%>"><%=myAvailableAppointments[i].appointmentname%></button>
                </h2>
                <div id="collapse<%=myAvailableAppointments[i].appointmentid%>" class="accordion-collapse collapse" data-bs-parent="#membersList">
                  <div class="accordion-body">
                    <div>Date: <%=myAvailableAppointments[i].date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })%></div>
                    <div>Start Time: <%=myAvailableAppointments[i].starttime%></div>
                    <div>End Time: <%=myAvailableAppointments[i].endtime%></div>
                    <button type="button" class="btn btn-danger delete-appointment" style="position: absolute; right: 2rem; bottom: 2rem;" onclick="handleDeleteAppointment(event)">Delete Appointment</button>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="createAppointment" tabindex="-1" aria-labelledby="createAppointment" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Appointment Details</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="appointmentTitle" class="form-label">Appointment Title</label>
                <input type="text" class="form-control" id="appointmentTitle" name="appointmentTitle" />
              </div>
              <div class="mb-3">
                <label for="appointmentDate" class="form-label">Appointment Date</label>
                <input type="date" class="form-control" id="appointmentDate" name="appointmentDate" min="<%= (new Date()).toISOString().split('T')[0] %>" />
              </div>
              <div class="mb-3">
                <label for="appointmentStartingTime" class="form-label">Appointment Starting Time</label>
                <input type="time" class="form-control" id="appointmentStartingTime" name="appointmentStartingTime" />
              </div>
              <div class="mb-3">
                <label for="appointmentEndingTime" class="form-label">Appointment Ending Time</label>
                <input type="time" class="form-control" id="appointmentEndingTime" name="appointmentEndingTime" min="22:14" />
              </div>
              <p id="appointmentError" class="text-danger hidden"></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary" id="submitAppointment">Create Appointment</button>
            </div>
          </div>
        </div>
      </div>
      <script src="js/appointmentTrainer.js"></script>
      <% } %>
    </div>
    <script src="js/accountInfo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
